@{
    ViewBag.Title = "ThongTinGiaoVien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TrungTamYenMy.Models.GiaoVien

<div class="container">
    <div class="row">
        <br/>
        <div class="col-md-12" style="height: 480px">
            <div class="col-md-4">
                <img src="@Model.Anh" style="width: 100%; height: 10%; margin: 0px;"/>
            </div>
            <div class="col-md-8">
                <a href="#" class="btn" style="background-color: #0070ba; width: 347px; height: 71px; text-align: center; margin-left: -77px; box-shadow: 2px 2px 2px #717171;">
                    <h2 style="color: white; font-weight: bold; margin-top: 10px;">Đôi nét về tôi</h2></a>
                <br/>
                <br/>
                <div style="border-bottom: 1px solid #828282;">
                    <h4 style="font-weight: bold">Nơi công tác:</h4>
                    <h4>@Model.NoiCongTac</h4>
                </div>
                <br/>
                <div class="clearfix"></div>


                <div>
                    <div class="col-md-6">
                        <h4 style="font-weight: bold"><i class="glyphicon "></i>Môn dạy:</h4>
                        <h4>@Model.ThongTin</h4>
                    </div>
                    <div class="col-md-6">
                        <h4 style="font-weight: bold"><i class="glyphicon "></i>Học vị:</h4>
                        <h4>Tiến sĩ</h4>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <div style="border-top: 1px solid #828282;">
                    <br/>
                    <div class="col-md-6">
                        <h4 style="font-weight: bold"><i class="glyphicon "></i>Email:</h4>
                        <a><h4>@Model.Email</h4></a>
                    </div>
                    <div class="col-md-6">
                        <h4 style="font-weight: bold"><i class="glyphicon "></i>Số năm công tác:</h4>
                        <h4>@Model.SoNamCongTac</h4>
                    </div>
                </div>
                <br/>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="clearfix"></div>
        <br/>
        <div class="col-md-12">
            <h3>Chi tiết:</h3>
            <p>@Model.GioiThieu</p>
        </div>

        <br/>
        <br/>
    </div>
    <br/><br/>
</div>
