
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TrungTamYenMy.Models.LienHe

<style>
    #mapCanvas {
        height: 600px;
    }
</style>
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="col-md-12">
                        <br/>
                        <h2>
                            Trung tâm đào tạo Yên Mỹ
                        </h2>
                        <ul class="list">
                            <li>Số điện thoại: @Model.SoDT</li>
                            <li>Email: <a href="https://mail.google.com/mail/u/0/#inbox">@Model.Email</a></li>
                            <li>Địa chỉ: @Model.DiaChi</li>
                        </ul>
                    </div>
                    <div class="col-md-12">

                        <br/>
                        <h2>
                            Liên hệ:
                        </h2>
                        <div class="contact_grid">
                            <form method="post" action="contact-post.html">
                                <div class="form-group">
                                    <label>Họ tên</label>
                                    <input type="text" id="txtName" class="form-control" placeholder="Họ tên"/>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" id="txtEmail" class="form-control" placeholder="Email"/>
                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input type="text" id="txtSDT" class="form-control" placeholder="Số điện thoại"/>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <input type="text" id="txtDiaChi" class="form-control" placeholder="Địa chỉ"/>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <textarea id="txtContent" class="form-control" placeholder="Lời nhắn"></textarea>
                                </div>
                                <div class="form-submit">
                                    <button id="btnSend" class="btn btn-success">Gửi liên hệ</button>
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                    <hr/>

                    <br/>
                    <div class="clearfix"> </div>
                </div>
                <div class="col-md-7">
                    <div class="map" id="mapCanvas"></div>
                </div>
            </div>
        </div>
<hr/>
<br/><br/>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCOBZalsnWcSws69-GTXPGRHDRainCe4Z4&callback=initMap">

</script>


<script src="https://maps.googleapis.com/maps/api/js"></script>
<script src="/assets/client/js/controller/contactController.js"></script>
<script>

        // This example displays a marker at the center of Australia.
        // When the user clicks the marker, an info window opens.
        //21.046300, 105.793266
        function initMap() {
            var uluru = { lat: 20.893363, lng: 106.046560 };
            var map = new google.maps.Map(document.getElementById('mapCanvas'), {
                zoom: 18,
                center: uluru
            });
            
            var contentString = '@Model.DiaChi';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Địa chỉ'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }

        google.maps.event.addDomListener(window, 'load', initMap);
</script>
